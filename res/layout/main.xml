<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:rpb="http://schemas.android.com/apk/res/com.example.RoundedProgressBar"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/darker_gray">
    
    <com.example.RoundedProgressBar.RoundedProgressBar
        android:id="@+id/pb"
        android:layout_width="200dp"
        android:layout_height="200dp"

        rpb:ringWidth="5dp"
        rpb:innerCircleRadius="35dp"
        rpb:ringColor="@android:color/white"
        rpb:textColor="@android:color/white"
        rpb:progressBarColor="#03ff96"
        rpb:textSize="18sp"
        rpb:isStrokeStyle="true"
        rpb:currentProgress="55" />

    <com.example.RoundedProgressBar.PausableProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        rpb:ringWidth="5dp"
        rpb:innerCircleRadius="25dp"
        rpb:ringColor="@android:color/white"
        rpb:textColor="@android:color/white"
        rpb:pauseBarColor="@android:color/white"
        rpb:progressBarColor="#ff5824"
        rpb:textSize="18sp"
        rpb:isStrokeStyle="true"
        rpb:currentProgress="36"/>

</LinearLayout>

